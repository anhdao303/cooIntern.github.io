@model Coolntern.ViewModel.ApplyJob

@{
    ViewBag.Title = "Accept";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section _Header{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .page {
            padding: 0 5rem 3rem 5rem;
        }
    </style>
}

<div style="margin-left:30px">
    <h2 style="font-weight:bold">Hồ sơ đã duyệt</h2>

</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <div class="text-center">
                    <img id="avatar-img" src="~/Content/upload/img/avatar/@Model.Avatar" alt="Ảnh đại diện" style="width: 100px; height: 100px; border-radius: 50%; margin: auto;">
                </div>
            </div>
            <div class="col-9">
                <table class="table table-bordered">
                    <tr>
                        <th width="20%">Tên</th>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Địa chỉ</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>GPA</th>
                        <td>@Model.GPA</td>
                    </tr>
                    <tr>
                        <th>Điểm rèn luyện</th>
                        <td>@Model.TrainingPoint</td>
                    </tr>
                    <tr>
                        <th>Ngày ứng tuyển</th>
                        <td>@Model.DateApply.GetValueOrDefault().ToLongDateString()</td>
                    </tr>
                    <tr>
                        <th>Tin nhắn</th>
                        <td>@Html.Raw(Model.Message)</td>
                    </tr>
                </table>        
            </div>
        </div>
    </div>
</div>

@section _Footer
{
    <script src="~/Areas/admin/Content/ckfinder/ckfinder.js"></script>
    <script src="~/Areas/admin/Content/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        var editor = CKEDITOR.replace("detail");
        var editor = CKEDITOR.replace("detail", { height: '800px' });
        customConfig: '/Areas/admin/Content/ckeditor/config.js';
    </script>
}