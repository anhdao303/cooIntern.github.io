@model IEnumerable<Coolntern.ViewModel.ApplyJob>
@using Coolntern.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section _Header{
    <link href="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<div style="margin-left:30px">
    <h2 style="font-weight:bold">Công việc từ chối</h2>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Tên người tuyển dụng
                        </th>
                        <th>
                            GPA
                        </th>
                        <th>
                            Điểm rèn luyện
                        </th>
                        <th>
                            Tên công việc
                        </th>
                        <th>
                            Ngày apply
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GPA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrainingPoint)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobName)
                        </td>
                        <td>
                            @item.DateApply.GetValueOrDefault().ToShortDateString()
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section _Footer{

    <!-- Page level plugins -->
    <script src="~/Areas/Admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/Admin/Content/js/demo/datatables-demo.js"></script>
}
