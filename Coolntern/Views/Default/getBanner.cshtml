@model Coolntern.Models.Banner

@if (Model != null)
{
    <div class="single-slider slider-height d-flex align-items-center banner" id="banner" data-background="/Content/upload/img/banner/@Model.image">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-9 col-md-10">
                    <div class="hero__caption">
                        <h1>@Model.message</h1>
                    </div>
                </div>
            </div>
            <!-- Search Box -->
            <div class="row">
                <div class="col-xl-8">
                    <!-- form -->
                    <form action="/cong-viec" class="search-box" method="get">
                        <div class="input-form">
                            <input type="text" name="key" placeholder="Job Tittle or keyword">
                        </div>
                        <div class="select-form">
                            <div class="select-itms">
                                <select name="location" id="select1">
                                    <option value="">Location</option>
                                    <option value="Ha Noi">Ha Noi</option>
                                    <option value="Ho Chi Minh">Ho Chi Minh</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="b-form btn">Find job</button>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
}


