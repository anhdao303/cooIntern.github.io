@{
    ViewBag.Title = "Home Page";
}

<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="slider-active">
        @{ Html.RenderAction("getBanner", "Default");}
    </div>
</div>
<!-- slider Area End-->
@{ Html.RenderAction("getCategory", "Default");}
