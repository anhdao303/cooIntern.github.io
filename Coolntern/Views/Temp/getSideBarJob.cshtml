<script>

    $(document).ready(function () {

        $("#Category").change(function () {
            let categoryId = $("#Category").val()

            $.ajax({
                url: '@Url.Action("GetJobByCategory", "Job")',
                type: 'GET',
                data: {
                    id: categoryId,
                },
                success: function (data) {
                    $(".job-data").html(data)
                },
                fail: function (data) {
                    alert("Something went wrong")
                },
            })
        })

        
